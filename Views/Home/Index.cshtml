@model IEnumerable<ParkingInfo>
@{
    ViewData["Title"] = "Home Page";
    var dbContext = ViewData["DbContext"];
}
<div class="d-flex justify-content-between align-items-center mb-5 pt-5" style="margin-top: 30px;">
    <h1 class="mb-0">Parking Info</h1>
    <div class="ms-auto">
        <a class="btn btn-secondary" asp-action="CreateViewParkingInfo" asp-controller="Home">Create Parking Info</a>
        <a class="btn btn-secondary ms-2" asp-action="CreateViewLocation" asp-controller="Location">Create Location</a>
        <a class="btn btn-secondary ms-2" asp-action="CreateViewType" asp-controller="ParkingType">Create Parking Type</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Location
                </th>
                <th>
                    Type
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var parkingInfo in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => parkingInfo.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => parkingInfo.Location.LocationName)
                    </td>
                    <td>
                       @Html.DisplayFor(model => parkingInfo.Type.ParkingTypeName)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Detail" asp-controller="Home" asp-route-id="@parkingInfo.Id"> Details </a>
                        <a class="btn btn-primary" asp-action="Delete" asp-controller="Home" asp-route-id="@parkingInfo.Id"> Delete </a>
                        <a class="btn btn-primary" asp-action="EditView" asp-controller="Home" asp-route-id="@parkingInfo.Id"> Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


